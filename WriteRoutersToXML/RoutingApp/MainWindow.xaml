        <StackPanel Grid.Column="2" Grid.Row="1">
            <StackPanel.Resources>
                <Style TargetType="Expander">
                    <Setter Property="Padding" Value="5 5 0 0"></Setter>
                </Style>
                <Style x:Key="LogList">
                    <Setter Property="ItemsControl.Margin" Value="20 0 0 0"></Setter>
                </Style>
            </StackPanel.Resources>
            <ItemsControl Name="LogList" DataContext="{Binding LogStepsList}" ItemsSource="{Binding }">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Expander>
                            <Expander.Header>
                                <TextBlock>
                                    <Run Text="Step number ="/>
                                    <Run Text="{Binding Path=StepNumber}"/>
                                </TextBlock>
                            </Expander.Header>
                            <Expander.Content>
                                <ItemsControl Name="LogList">
                                    <Expander Header="Controller Logs">
                                        <Expander.Content>
                                            <ItemsControl ItemsSource="{Binding Path=ControllerLogs}" Style="{StaticResource LogList}"></ItemsControl>
                                        </Expander.Content>
                                    </Expander>
                                    <Expander Header="Paths Logs">
                                        <Expander.Content>
                                            <ItemsControl ItemsSource="{Binding Path=PathsLog}" Style="{StaticResource LogList}"></ItemsControl>
                                        </Expander.Content>
                                    </Expander>
                                </ItemsControl>                    
                            </Expander.Content>
                        </Expander>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Button x:Name="AddNewLogStep" Click="AddNewLogStep_Click" Height="30"></Button>
        </StackPanel>

    </Grid>
</Window>
